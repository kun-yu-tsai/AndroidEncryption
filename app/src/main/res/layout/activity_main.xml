<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="Get Device Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:id="@+id/get_device_info_button"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:id="@+id/device_info_hash_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/get_device_info_button"
            app:layout_constraintTop_toBottomOf="@+id/get_device_info_button"
            android:text="Device Info Hash"/>
    <Button
            android:id="@+id/post_request_button"
            android:text="Post request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/device_info_hash_text"
            app:layout_constraintTop_toBottomOf="@+id/device_info_hash_text"
    />
    <TextView
            android:id="@+id/request_result_text"
            android:text="Request result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/post_request_button"
            app:layout_constraintTop_toBottomOf="@+id/post_request_button"
            android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>